<div class='container'>
  <%= erb :_nav %>
  <p><%= @post.content %></p>
  <% if current_user.posts.include?(@post) %>  
    <a href="#"><img class="update" src="/pencil.svg"></a>
    <a href="#"><img class="update" src="/trash.svg"></a>
  <% else %>
    <a href="#"><img class="vote" src="/down_arrow.svg"></a>
    <a href="#"><img class="vote" src="/up_arrow.svg"></a>
  <% end %>
</div>

  

<div class='container'>
  <h2>Tags associated with this post:</h2>
  <% @tags.each do |tag| %>
    <a href='/tags/<%= tag.id %>'><%= tag.name %></a>
  <% end %>
</div>
<% if @post.user_id == session[:user_id] %>
  <div class='container'>
    <button id='edit'><a href='/users/<%=session[:user_id]%>/posts/<%= @post.id %>/update'>Edit Post</a></button>
    <form action='/posts/<%= @post.id %>' method='post'>
      <input type='hidden' name='_method' value='delete'>
      <button type='submit'>Delete Post</button>
    </form>
  </div>
<% end %>

<div class="dashboard">
  <%= erb :_dashboard %>
</div>


