<div class='container'>
  <h1><a href="http://<%= @post.url %>"><%= @header %></a></h1>
  <p><%= @post.content %></p>
</div>

<div class='container'>
  <h2>Tags associated with this post:</h2>
  <% @tags.each do |tag| %>
    <a href='/tags/<%= tag.id %>'><%= tag.name %></a>
  <% end %>
</div>
<% if @post.user_id == session[:user_id] %>
  <div class='container'>
    <button id='edit'><a href='/users/<%=session[:user_id]%>/posts/<%= @post.id %>/update'>Edit Post</a></button>
    <form action='/posts/<%= @post.id %>' method='post'>
      <input type='hidden' name='_method' value='delete'>
      <button type='submit'>Delete Post</button>
    </form>
  </div>
<% end %>
