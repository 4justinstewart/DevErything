<div class='container'>
  <h1><%= @post.title %></h1>
  <h3><%= @post.author %></h1>
  <p><%= @post.content %></p>
</div>

<div class='container'>
  <h2>Tags associated with this post:</h2>
  <% @tags.each do |tag| %>
    <a href='#'><%= tag.name %></a>
  <% end %>
</div>
<% if @post.user_id == session[:user_id] %>
  <div class='container'>
    <button id='edit'><a href='/users/<%=session[:user_id]%>/posts/<%= @post.id %>/update'>Edit Post</a></button>
    <form action='/posts/<%= @post.id %>' method='post'>
      <input type='hidden' name='_method' value='delete'>
      <button type='submit'>Delete Post</button>
    </form>
  </div>
<% end %>
