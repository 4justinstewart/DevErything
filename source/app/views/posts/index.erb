<div class="large_container">
  <%= erb :_nav %><br>
  <form id="search_form">
    <input size="37px" id="search_input" type="text" placeholder="search" name="search">
  </form>
  <% counter = 0 %>
  <div class="smaller_container">
    <% @categories.each do |cat| %>
<!-- issue below -->
      <div class="resource_col<%= counter %>" id="cat<%= cat.id %>">
        <h2><%= cat.name %></h2>
        <img class="image" src="/posts.svg" alt="All Posts"/>
        <% get_popular_posts(cat).each do |post| %>
          <table>
            <tr>
              <td colspan='5'><input class="checkbox" type="checkbox" name="option" value="<%= post.id %>" <%= is_favorite(post.id, current_user.id) %>><a href="/posts/<%= post.id %>"><%=post.title%></a></td>
            </tr>
        <% end %>
        </table>
          <div class="show_loser">
          <% if (get_loser_posts(cat)).empty? != true %>
            <% get_loser_posts(cat).each do |loser_post| %>

                <span><input class="checkbox" type="checkbox" name="option" value="<%= loser_post.id %>" <%= is_favorite(loser_post.id, current_user.id) %>><a style="color:red" href="/posts/<%= loser_post.id %>"><%=loser_post.title%></a></span>

            <% end %>
          <% end %>
          </div>

      </div>



      <% counter += 1 %>
    <% end %>
  </div>
</div>

<div class="dashboard">
  <%= erb :_dashboard %>
</div>
