<div class="container">
  <h1><%= @header %></h1>
  <ul>
    <% @posts.each do |post| %>
      <li><a href="/posts/<%=post.id%>"><%=post.title%></a></li>
    <% end %>
  </ul>
  <% if current_user %>
    <button><a href="/users/<%=session[:user_id]%>/posts/new">Create Post</a></button>
    <button><a href='<%= @button_route %>'><%= @button_text %></a></button>
    <form class="submit" action='/signout' method='post'>
      <button type='submit'>Logout</button>
    </form>
  <% end %>
</div>
